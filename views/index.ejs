  <body>
    <div class="container py-4 my-4">
      <div class="row my-4">
        <div class="col d-flex justify-content-center align-items-center px-4">
          <img src="/assets/images/new_logo.png" alt="logo" class="img-fluid" />
        </div>
      </div>

      <div class="row">
        <div class="col d-flex justify-content-center align-items-center px-4">
          <form class="login-form" id="loginForm">
