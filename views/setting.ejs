<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Digital-vle</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
    <link
      rel="icon"
      href="/assets/images/favicon_logo.jpg"
      type="image/x-icon"
    />
    <link rel="stylesheet" href="/css/index.css" />
  </head>

  <body>
    <!-- header -->
    <header class="header">
      <div class="container-fluid fixed-top topbar">
        <div class="row d-flex justify-content-center align-items-center h-100">
          <div class="col-2 col-md-2 col-lg-2 logo-col p-1">
            <img
              src="/assets/images/new_logo.png"
              class="img-fluid"
              alt="logo"
            />
          </div>

          <div class="col-10 col-md-10 col-lg-10 nav-col p-0">
            <nav class="navbar navbar-expand-lg justify-content-between p-1">
              <div class="toggle-btn d-lg-none d-md-block m-1">
                <i class="fas fa-bars"></i>
              </div>
              <a
                class="navbar-brand text-white px-md-3 px-sm-2 m-1"
                id="nav-bar_"
                href="#"
              ></a>
              <div class="dropdown px-md-3 px-sm-2 m-1">
                <button
                  class="profile-button dropdown-toggle bg-light"
                  type="button"
                  id="profileDropdown"
                  data-bs-toggle="dropdown"
                  aria-expanded="false"
                >
                  <img
                    src="/assets/images/default_icon.png"
                    draggable="false"
                    alt="Profile"
                    id="admin-profile-icon"
                  />
                </button>
                <ul
                  class="dropdown-menu dropdown-menu-end bg-dark border border-secondary"
                  aria-labelledby="profileDropdown"
                >
                  <li>
                    <a
                      class="dropdown-item nav-link px-3 py-1 text-white"
                      data-target="#admin_profile"
                      draggable="false"
                      href="#"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        width="24px"
                        height="24px"
                      >
                        <path
                          d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"
                        />
                      </svg>
                      Profile</a
                    >
                  </li>
                  <li>
                    <hr class="dropdown-divider border border-secondary" />
                  </li>
                  <li>
                    <a
                      class="dropdown-item px-3 py-1 text-white"
                      id="logout-btn"
                      draggable="false"
                      href="#"
                    >
                      <svg
                        xmlns="http://www.w3.org/2000/svg"
                        viewBox="0 0 24 24"
                        fill="currentColor"
                        width="24px"
                        height="24px"
                      >
                        <path
                          d="M16 13v-2H7V8l-5 4 5 4v-3h9zm7-9v14c0 1.1-.9 2-2 2H3c-1.1 0-2-.9-2-2V4c0-1.1.9-2 2-2h18c1.1 0 2 .9 2 2zM21 4H3v14h18V4z"
                        />
                      </svg>
                      Logout</a
                    >
                  </li>
                </ul>
              </div>
            </nav>
          </div>
        </div>
      </div>
    </header>

    <!-- main -->
    <main class="content">
      <div class="container-fluid main-div-content">
        <div class="row d-flex">
          <!-- sidebar -->
          <div
            class="col d-none d-lg-block col-lg-2 col-md-3 col-6 sidebar px-0 py-3"
          >
            <a
              draggable="false"
              data-index="1"
              href="/admin/dashboard"
              class="nav-link sidebar-link active"
              ><i class="fas fa-tachometer-alt"></i>
              Dashboard
            </a>
            <a
              draggable="false"
              id="videos"
              data-index="2"
              class="nav-link sidebar-link"
              href="/admin/video"
              ><i class="fas fa-video"></i>
              Videos
            </a>
            <a
              draggable="false"
              id="Article"
              data-index="3"
              class="nav-link sidebar-link"
              href="/admin/article"
              ><i class="fas fa-newspaper"></i>
              Articles
            </a>
            <a
              draggable="false"
              id="user"
              data-index="4"
              class="nav-link sidebar-link"
              href="/admin/user"
              ><i class="fas fa-users"></i>
              Users
            </a>
            <a
              draggable="false"
              id="category"
              data-index="5"
              class="nav-link sidebar-link"
              href="/admin/category"
              ><i class="fas fa-list"></i>
              Categories
            </a>
            <a
              draggable="false"
              data-index="6"
              id="story"
              class="nav-link sidebar-link"
              href="/admin/story"
              ><i class="fas fa-newspaper"></i>
              Stories
            </a>
            <a
              draggable="false"
              id="subscription-plan"
              data-index="7"
              class="nav-link sidebar-link"
              href="/admin/subscription"
              ><i class="fas fa-calendar-alt"></i>
              Subscription Plan
            </a>
            <a
              draggable="false"
              id="coupon"
              data-index="8"
              class="nav-link sidebar-link"
              href="/admin/coupon"
              ><i class="fas fa-ticket-alt"></i>
              Coupons
            </a>
            <a
              draggable="false"
              id="banner"
              data-index="9"
              class="nav-link sidebar-link"
              href="/admin/banner"
              ><i class="fas fa-flag"></i>
              Banners
            </a>
            <a
              draggable="false"
              data-index="10"
              class="nav-link sidebar-link"
              id="setting"
              href="/admin/setting"
              ><i class="fas fa-cogs"></i>
              Settings
            </a>
            <a
              draggable="false"
              data-index="11"
              class="nav-link sidebar-link"
              href="/admin/term"
              ><i class="fas fa-file-contract"></i>
              T&C
            </a>
            <a
              draggable="false"
              data-index="12"
              class="nav-link sidebar-link"
              href="/admin/logout"
              ><i class="fas fa-sign-out-alt"></i>
              Logout
            </a>
          </div>

          <!-- content -->
          <div class="col-lg-10 offset-lg-2 px-3 content">
            <!-- settings -->
            <section id="settings" class="settings">
              <div class="main-content">
                <div class="container-fluid">
                  <!-- Tabs for Settings Sections -->
                  <ul
                    class="nav nav-tabs mt-3 justify-content-between align-items-center p-2 rounded"
                    id="myTab"
                    role="tablist"
                  >
                    <li class="nav-item" role="presentation">
                      <a
                        draggable="false"
                        class="nav-bar-link active"
                        id="general-tab"
                        data-bs-toggle="tab"
                        href="#general"
                        role="tab"
                        aria-controls="general"
                        aria-selected="true"
                        >General</a
                      >
                    </li>
                    <li class="nav-item" role="presentation">
                      <a
                        draggable="false"
                        class="nav-bar-link"
                        id="smtp-tab"
                        data-bs-toggle="tab"
                        href="#smtp"
                        role="tab"
                        aria-controls="smtp"
                        aria-selected="false"
                        >Smtp Email</a
                      >
                    </li>
                    <li class="nav-item" role="presentation">
                      <a
                        draggable="false"
                        class="nav-bar-link"
                        id="social-tab"
                        data-bs-toggle="tab"
                        href="#social"
                        role="tab"
                        aria-controls="social"
                        aria-selected="false"
                        >Social Login</a
                      >
                    </li>
                    <li class="nav-item" role="presentation">
                      <a
                        draggable="false"
                        class="nav-bar-link"
                        id="menu-tab"
                        data-bs-toggle="tab"
                        href="#menu"
                        role="tab"
                        aria-controls="menu"
                        aria-selected="false"
                        >Menu</a
                      >
                    </li>
                    <li class="nav-item" role="presentation">
                      <a
                        draggable="false"
                        class="nav-bar-link"
                        id="recaptcha-tab"
                        data-bs-toggle="tab"
                        href="#recaptcha"
                        role="tab"
                        aria-controls="recaptcha"
                        aria-selected="false"
                        >Recapcha</a
                      >
                    </li>
                    <li class="nav-item" role="presentation">
                      <a
                        draggable="false"
                        class="nav-bar-link"
                        id="banner-tab"
                        data-bs-toggle="tab"
                        href="#banner_"
                        role="tab"
                        aria-controls="banner"
                        aria-selected="false"
                        >Website Banner Ads</a
                      >
                    </li>
                    <li class="nav-item" role="presentation">
                      <a
                        draggable="false"
                        class="nav-bar-link"
                        id="maintenance-tab"
                        data-bs-toggle="tab"
                        href="#maintenance"
                        role="tab"
                        aria-controls="maintenance"
                        aria-selected="false"
                        >Site Maintenance</a
                      >
                    </li>
                  </ul>

                  <!-- Tab Content -->
                  <div class="tab-content mb-4" id="myTabContent">
                    <!-- General Settings Section -->
                    <div
                      class="tab-pane fade show active content-box"
                      id="general"
                      role="tabpanel"
                      aria-labelledby="general-tab"
                    >
                      <form id="siteConfigForm">
                        <div class="row">
                          <div class="col-md-6">
                            <div class="mb-3">
                              <label for="siteName" class="form-label"
                                >Site Name*</label
                              >
                              <input
                                type="text"
                                class="form-control"
                                id="siteName"
                                placeholder="Enter site name"
                                required
                                aria-required="true"
                                name="siteName"
                              />
                            </div>

                            <div class="mb-3">
                              <label for="siteLogo" class="form-label"
                                >Site Logo*</label
                              >
                              <input
                                type="file"
                                class="form-control"
                                id="siteLogo"
                                accept="image/*"
                                onchange="previewThumbnail(event)"
                                aria-required="true"
                                name="siteLogo"
                              />
                              <img
                                id="logo-preview"
                                class="thumbnail-preview"
                                src=""
                                alt="Logo Preview"
                              />
                            </div>

                            <div class="mb-3">
                              <label for="siteKeywords" class="form-label"
                                >Site Keywords</label
                              >
                              <input
                                type="text"
                                class="form-control"
                                id="siteKeywords"
                                placeholder="Enter site keywords"
                                required
                                aria-required="true"
                                name="siteKeywords"
                              />
                            </div>

                            <div class="mb-3">
                              <label for="siteFavicon" class="form-label"
                                >Site Favicon*</label
                              >
                              <input
                                type="file"
                                class="form-control"
                                id="siteFavicon"
                                accept="image/*"
                                onchange="previewThumbnail(event)"
                                aria-required="true"
                                name="siteFavicon"
                              />
                              <img
                                id="favicon-preview"
                                class="thumbnail-preview"
                                src=""
                                alt="Favicon Preview"
                              />
                            </div>

                            <div class="mb-3">
                              <label for="email" class="form-label"
                                >Email*</label
                              >
                              <input
                                type="email"
                                class="form-control"
                                id="email"
                                placeholder="Enter email"
                                required
                                aria-required="true"
                                name="email"
                              />
                            </div>

                            <div class="mb-3">
                              <label for="description" class="form-label"
                                >Description</label
                              >
                              <textarea
                                class="form-control"
                                id="_description"
                                rows="4"
                                placeholder="write description"
                                aria-required="true"
                                name="_description"
                              ></textarea>
                            </div>
                          </div>

                          <div class="col-md-6">
                            <div class="mb-3">
                              <label for="headerCode" class="form-label"
                                >Header Code</label
                              >
                              <textarea
                                class="form-control"
                                id="headerCode"
                                rows="3"
                                placeholder="Enter header code"
                                required
                                aria-required="true"
                                name="headerCode"
                              ></textarea>
                            </div>

                            <div class="mb-3">
                              <label for="footerCode" class="form-label"
                                >Footer Code</label
                              >
                              <textarea
                                class="form-control"
                                id="footerCode"
                                rows="3"
                                placeholder="Enter footer code"
                                required
                                aria-required="true"
                                name="footerCode"
                              ></textarea>
                            </div>

                            <div class="mb-3">
                              <label for="copyrightText" class="form-label"
                                >Copyright Text</label
                              >
                              <input
                                type="text"
                                class="form-control"
                                id="copyrightText"
                                placeholder="Enter copyright text"
                                required
                                aria-required="true"
                                name="copyrightText"
                              />
                            </div>

                            <h5 class="mt-4">Social Media Links</h5>
                            <div class="mb-3">
                              <label for="facebook" class="form-label"
                                >Facebook URL</label
                              >
                              <input
                                type="url"
                                class="form-control"
                                id="facebook"
                                placeholder="Enter facebook url"
                                name="facebook"
                              />
                            </div>

                            <h5 class="mt-4">App Download Links</h5>
                            <div class="mb-3">
                              <label for="googlePlay" class="form-label"
                                >Google Play URL</label
                              >
                              <input
                                type="url"
                                class="form-control"
                                id="googlePlay"
                                placeholder="Enter google play url"
                                name="googlePlay"
                              />
                            </div>
                          </div>
                        </div>

                        <div class="row">
                          <div class="col-12 text-start mt-2">
                            <button type="submit" class="btn btn-danger btn-sm">
                              Save Settings
                            </button>
                          </div>
                        </div>
                      </form>
                    </div>

                    <!-- SMTP Email Section -->
                    <div
                      class="tab-pane fade content-box"
                      id="smtp"
                      role="tabpanel"
                      aria-labelledby="smtp-tab"
                    >
                      <form id="smtp-form">
                        <div class="mb-3">
                          <label for="smtpHost" class="form-label"
                            >SMTP Host</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="smtpHost"
                            placeholder="Enter SMTP host"
                            required
                            name="smtpHost"
                          />
                        </div>
                        <div class="mb-3">
                          <label for="smtpPort" class="form-label"
                            >SMTP Port</label
                          >
                          <input
                            type="number"
                            class="form-control"
                            id="smtpPort"
                            placeholder="Enter SMTP port"
                            required
                            name="smtpPort"
                          />
                        </div>
                        <div class="mb-3">
                          <label for="smtpEmail" class="form-label"
                            >SMTP Email</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="smtpEmail"
                            placeholder="Enter SMTP email"
                            required
                            name="smtpEmail"
                          />
                        </div>
                        <div class="mb-3">
                          <label for="smtpPassword" class="form-label"
                            >SMTP Password</label
                          >
                          <input
                            type="password"
                            class="form-control"
                            id="smtpPassword"
                            placeholder="Enter SMTP password"
                            required
                            name="smtpPassword"
                          />
                        </div>
                        <div class="mb-3">
                          <label for="encryptionType" class="form-label"
                            >Encryption Type</label
                          >
                          <select
                            class="form-control"
                            name="encryptionType"
                            id="encryptionType"
                          >
                            <option value="SSL">SSL</option>
                            <option value="TLS">TLS</option>
                          </select>
                        </div>
                        <button type="submit" class="btn btn-danger btn-sm">
                          Save Settings
                        </button>
                      </form>
                    </div>

                    <!-- Social Login Section -->
                    <div
                      class="tab-pane fade content-box"
                      id="social"
                      role="tabpanel"
                      aria-labelledby="social-tab"
                    >
                      <form id="settingsForm_social">
                        <h5>Google Settings</h5>
                        <div class="mb-3">
                          <label for="googleLogin" class="form-label"
                            >Google Login</label
                          >
                          <select
                            class="form-control"
                            id="googleLogin"
                            required
                            name="googleLogin"
                          >
                            <option value="true">ON</option>
                            <option value="false">OFF</option>
                          </select>
                        </div>

                        <div class="mb-3">
                          <label for="googleClientId" class="form-label"
                            >Google Client ID</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="googleClientId"
                            placeholder="Enter Google Client ID"
                            required
                            name="googleClientId"
                          />
                        </div>

                        <div class="mb-3">
                          <label for="googleSecret" class="form-label"
                            >Google Secret</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="googleSecret"
                            placeholder="Enter Google Secret"
                            required
                            name="googleSecret"
                          />
                        </div>

                        <hr class="my-4" />

                        <h5>Facebook Settings</h5>
                        <div class="mb-3">
                          <label for="facebookLogin" class="form-label"
                            >Facebook Login</label
                          >
                          <select
                            class="form-control"
                            id="facebookLogin"
                            required
                            name="facebookLogin"
                          >
                            <option value="false">OFF</option>
                            <option value="true">ON</option>
                          </select>
                        </div>

                        <div class="mb-3">
                          <label for="facebookAppId" class="form-label"
                            >Facebook App ID</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="facebookAppId"
                            placeholder="Enter Facebook App ID"
                            required
                            name="facebookAppId"
                          />
                        </div>

                        <div class="mb-3">
                          <label for="facebookClientSecret" class="form-label"
                            >Facebook Client Secret</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="facebookClientSecret"
                            placeholder="Enter Facebook Client Secret"
                            required
                            name="facebookClientSecret"
                          />
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-danger btn-sm">
                          Save Settings
                        </button>
                      </form>
                    </div>

                    <!-- Menu Settings Section -->
                    <div
                      class="tab-pane fade content-box"
                      id="menu"
                      role="tabpanel"
                      aria-labelledby="menu-tab"
                    >
                      <form id="settingsForm_menu">
                        <div class="mb-3">
                          <label for="story" class="form-label">Story</label>
                          <select
                            class="form-select"
                            name="story"
                            id="story"
                            required
                          >
                            <option value="true">ON</option>
                            <option value="false">Off</option>
                          </select>
                        </div>

                        <div class="mb-3">
                          <label for="article" class="form-label"
                            >Article</label
                          >
                          <select
                            class="form-select"
                            name="article"
                            id="article"
                            required
                          >
                            <option value="true">ON</option>
                            <option value="false">OFF</option>
                          </select>
                        </div>

                        <div class="mb-3">
                          <label for="video__" class="form-label">Video</label>
                          <select
                            class="form-select"
                            name="video__"
                            id="video__"
                            required
                          >
                            <option value="true">ON</option>
                            <option value="false">OFF</option>
                          </select>
                        </div>

                        <button type="submit" class="btn btn-danger btn-sm">
                          Save Settings
                        </button>
                      </form>
                    </div>

                    <!-- reCAPTCHA Section -->
                    <div
                      class="tab-pane fade content-box"
                      id="recaptcha"
                      role="tabpanel"
                      aria-labelledby="recaptcha-tab"
                    >
                      <form id="recaptchaSettingsForm">
                        <div class="mb-3">
                          <label for="siteKey" class="form-label"
                            >Site Key</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="siteKey"
                            placeholder="Enter site Key"
                            required
                            name="siteKey"
                          />
                        </div>

                        <div class="mb-3">
                          <label for="secretKey" class="form-label"
                            >Secret Key</label
                          >
                          <input
                            type="text"
                            class="form-control"
                            id="secretKey"
                            placeholder="Enter secret Key"
                            required
                            name="secretKey"
                          />
                        </div>

                        <div class="mb-3">
                          <label for="enableOnLogin" class="form-label"
                            >Enable on Login</label
                          >
                          <select
                            class="form-select"
                            name="enableOnLogin"
                            id="enableOnLogin"
                            required
                          >
                            <option value="false">OFF</option>
                            <option value="true">ON</option>
                          </select>
                        </div>

                        <div class="mb-3">
                          <label for="enableOnSignup" class="form-label"
                            >Enable on Signup</label
                          >
                          <select
                            class="form-select"
                            id="enableOnSignup"
                            required
                            name="enableOnSignup"
                          >
                            <option value="true">OFF</option>
                            <option value="false">ON</option>
                          </select>
                        </div>

                        <div class="mb-3">
                          <label for="enableOnForgotPassword" class="form-label"
                            >Enable on Forgot Password</label
                          >
                          <select
                            class="form-select"
                            id="enableOnForgotPassword"
                            required
                            name="enableOnForgotPassword"
                          >
                            <option value="false">OFF</option>
                            <option value="true">ON</option>
                          </select>
                        </div>

                        <div class="mb-3">
                          <label for="enableOnContactUs" class="form-label"
                            >Enable on Contact Us</label
                          >
                          <select
                            class="form-select"
                            id="enableOnContactUs"
                            required
                            name="enableOnContactUs"
                          >
                            <option value="false">OFF</option>
                            <option value="true">ON</option>
                          </select>
                        </div>

                        <!-- Submit Button -->
                        <button type="submit" class="btn btn-danger btn-sm">
                          Save Settings
                        </button>
                      </form>
                    </div>

                    <!-- Website Banner Ads Section -->
                    <div
                      class="tab-pane fade content-box"
                      id="banner_"
                      role="tabpanel"
                      aria-labelledby="banner-tab"
                    >
                      <form id="bannerAdsForm">
                        <div class="row">
                          <div class="col-md-6">
                            <!-- Home Top -->
                            <div class="mb-4">
                              <label class="form-label">Home Top</label>
                              <div class="banner-ad">
                                <a
                                  href="https://1.envato.market/JakrN"
                                  target="_blank"
                                >
                                </a>
                              </div>
